{
	"compilerOptions": {
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"jsx": "react",

		"module": "esnext",
		"moduleResolution": "node",

		"strict": true,

		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,

		"resolveJsonModule": true,
		"allowJs": true,

		"isolatedModules": true,

		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,

		"noEmit": true
	},
	"include": ["src"]
}
