{
	"name": "node-template",
	"version": "1.1.1",
	"private": true,
	"scripts": {
		"build": "npm run clean && npm run build:client && npm run build:server",
		"build:client": "react-scripts build && mv build client && mkdir -p build && mv client build/client",
		"build:server": "tsc -p server/tsconfig.json",
		"clean": "rm -rf build",
		"lint": "prettier -w * && sort-package-json",
		"start:client": "react-scripts start",
		"start:server": "nodemon"
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
	"eslintConfig": {
		"extends": "react-app"
	},
	"dependencies": {
		"colors": "^1.4.0",
		"cors": "^2.8.5",
		"express": "^4.17.1",
		"react": "^16.14.0",
		"react-dom": "^16.14.0"
	},
	"devDependencies": {
		"@types/cors": "^2.8.8",
		"@types/express": "^4.17.8",
		"@types/node": "^12.12.68",
		"@types/react": "^16.9.53",
		"@types/react-dom": "^16.9.8",
		"node-sass": "^4.14.1",
		"nodemon": "^2.0.6",
		"prettier": "^2.1.2",
		"react-scripts": "3.4.3",
		"sort-package-json": "^1.46.0",
		"typescript": "^3.7.5"
	},
	"proxy": "http://localhost:3000/"
}
