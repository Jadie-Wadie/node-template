{
	"compilerOptions": {
		"target": "es5",
		"lib": ["es5", "es6"],

		"module": "commonjs",
		"moduleResolution": "node",

		"strict": true,

		"esModuleInterop": true,
		"resolveJsonModule": true,

		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,

		"outDir": "../build/server"
	}
}
